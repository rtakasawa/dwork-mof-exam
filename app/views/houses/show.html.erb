<p id="notice"><%= notice %></p>

<h1>閲覧</h1>
<p>物件名：<%= @house.house_name %></p>
<p>賃料：<%= @house.rent %>円</p>
<p>住所：<%= @house.house_address %></p>
<p>築年数：<%= @house.house_age %>年</p>
<p>備考：<%= @house.remarks %></p>
<% @house.stations.each.with_index(1) do |station, index| %>
  <h3><%= "最寄り駅#{index}" %></h3>
  <p>路線名：<%= station.line %></p>
  <p>駅名：<%= station.station_name %></p>
  <p>徒歩分数：<%= station.minutes_on_foot %>分</p>
<% end %>
