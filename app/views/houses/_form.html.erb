<%= form_with model: @house,local: true do |f| %>
  <% if @house.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% @house.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="actions">
    <%= f.label :house_name, "物件名" %>
    <%= f.text_field :house_name %>
    <%= f.label :rent, "賃料" %>
    <%= f.number_field :rent, step: "0.1" , min: 0.1 %>円
    <%= f.label :house_address, "住所" %>
    <%= f.text_field :house_address %>
    <%= f.label :house_age, "築年数" %>
    <%= f.number_field :house_age, min: 0 %>年
    <%= f.label :remarks, "備考" %>
    <%= f.text_area :remarks %>
  </div>

  <div class="information-group">
    <% num=0 %>
    <%= f.fields_for :stations do |s| %>
      <h3><%= "最寄り駅#{num+=1}" %></h3>
      <%= s.label :line, "路線名" %>
      <%= s.text_field :line %>
      <%= s.label :station_name, "駅名" %>
      <%= s.text_field :station_name %>
      <%= s.label :minutes_on_foot, "徒歩分数" %>
      <%= s.number_field :minutes_on_foot, min: 0 %>分
    <% end %>
  </div>
  <%= f.submit %>
<% end %>


